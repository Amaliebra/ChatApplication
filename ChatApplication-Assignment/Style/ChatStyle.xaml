<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ChatStyle" TargetType="ListViewItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Ellipse
                                Grid.Column="0"
                                Width="30"
                                Height="30"
                                Margin="10,0,5,0"
                                VerticalAlignment="Top"
                                Fill="#56C54C" />
                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Content="{Binding Username, FallbackValue='(unknown user)'}"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="{Binding UsernameColor, TargetNullValue='#000000', FallbackValue='Black'}" />
                                    <Label
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Content="{Binding Time, StringFormat='hh:mm tt', FallbackValue='No Time'}"
                                        FontSize="9"
                                        FontWeight="SemiBold"
                                        Foreground="#FF2F2E2E" />
                                </StackPanel>
                                <Label
                                    Margin="0,2,0,0"
                                    Content="{Binding Message}"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="#FF2F2E2E" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
