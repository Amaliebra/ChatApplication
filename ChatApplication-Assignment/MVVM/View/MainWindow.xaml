<Window
    x:Class="ChatClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ChatClient.MVVM.ViewModel"
    Title="MainWindow"
    Width="1000"
    Height="550"
    AllowsTransparency="True"
    Background="#FFEAEAEA"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="White"
            MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Image
                    Width="20"
                    Height="20"
                    Margin="5,2,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="-2.087,0.958"
                    Source="\Resources\logo.png">
                    <Image.OpacityMask>
                        <ImageBrush
                            ImageSource="\Resources\logo.png"
                            Stretch="Fill"
                            TileMode="None" />
                    </Image.OpacityMask>
                </Image>
                <Label
                    Margin="20,0,0,0"
                    Content="LilyChat"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="#FF2F2E2E" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"
                        Content="🗕"
                        Foreground="#FF2F2E2E" />
                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MaximizeButton_Click"
                        Content="◻"
                        FontWeight="ExtraBold"
                        Foreground="#FF2F2E2E" />
                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ExitButton_Click"
                        Content="X"
                        FontWeight="SemiBold"
                        Foreground="#FF2F2E2E" />
                </StackPanel>
            </Grid>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    ShadowDepth="1"
                    Color="#FFD0D0D0" />
            </Border.Effect>
        </Border>

        <Grid Grid.Row="1" Background="#ffffff">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Label
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Content="Contacts"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#FF2F2E2E" />
            <ListView
                Grid.Row="1"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ContactStyle}"
                ItemsSource="{Binding Contacts}"
                SelectedItem="{Binding SelectedContact}"
                SelectionChanged="ListView_SelectionChanged" />

            <StackPanel
                Grid.Row="2"
                Background="#DBDBDB"
                Orientation="Horizontal">
                <Border
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="#56C54C"
                    CornerRadius="25" />
                <StackPanel VerticalAlignment="Center">
                    <Label
                        Margin="0,-8,0,-5"
                        Content="{Binding Username}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#FF2F2E2E" />
                    <Label
                        Margin="0,-5,0,-5"
                        Content="Status"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="SlateGray" />
                </StackPanel>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <Border Background="#C4FFBF">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Direction="320"
                        ShadowDepth="1"
                        Color="#FFD0D0D0" />
                </Border.Effect>
                <Grid Margin="3" HorizontalAlignment="Stretch">
                    <Label
                        Margin="2,0,2,0"
                        VerticalAlignment="Center"
                        Content="{Binding SelectedContact.Username}"
                        FontWeight="bold"
                        Foreground="#FF2F2E2E" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Image
                            Width="15"
                            Height="15"
                            Margin="5,0,5,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            Source="/Resources/icon-video.png" />
                        <Image
                            Width="12"
                            Height="12"
                            Margin="5,0,5,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            Source="/Resources/icon-call.png" />
                    </StackPanel>

                </Grid>
            </Border>

            <ListView
                Grid.Row="1"
                Margin="8,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ChatStyle}"
                ItemsSource="{Binding SelectedContact.Messages, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Height="50"
                    Style="{StaticResource ChatBox}"
                    Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,16,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="50"
                        Height="50"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding SendMessageCommand}"
                        Content="Send"
                        FontWeight="SemiBold" />
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
