<Window
    x:Class="ChatClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ChatClient.MVVM.ViewModel"
    Title="MainWindow"
    Width="1000"
    Height="650"
    AllowsTransparency="True"
    Background="#FFEAEAEA"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Width="500"
            Height="50"
            Margin="183,349,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            Foreground="#FF212121"
            IsEnabled="False"
            TextWrapping="Wrap">
            <TextBlock.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    ShadowDepth="1"
                    Color="#FFD0D0D0" />
            </TextBlock.Effect><Run Text="T" /><Run Language="nb-no" Text="ype a message" /></TextBlock>
        <Button
            x:Name="sendButton"
            Width="80"
            Height="50"
            Margin="693,349,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            BorderThickness="0"
            Content="SEND"
            Foreground="#FF212121">
            <Button.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    ShadowDepth="1"
                    Color="#FFD0D0D0" />
            </Button.Effect>
        </Button>
        <Border
            Grid.RowSpan="2"
            Width="163"
            Height="403"
            Margin="0,31,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFC4FFBF"
            BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    ShadowDepth="1"
                    Color="#FFD0D0D0" />
            </Border.Effect>
        </Border>
        <Border
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Image
                    Width="23"
                    Height="23"
                    Margin="5,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="-2.087,0.958"
                    Source="/MVVM/View/Group 1.png">
                    <Image.OpacityMask>
                        <ImageBrush
                            ImageSource="/MVVM/View/Group 1.png"
                            Stretch="Fill"
                            TileMode="None" />
                    </Image.OpacityMask>
                </Image>
                <Label
                    Content="LilyChat"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Gray" />

                <StackPanel HorizontalAlignment="Right" 
                            Orientation="Horizontal">
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        Background="Pink"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"
                        Content="🗕"
                        FontWeight="Bold"
                        Foreground="Gray" />
                    <Button
                        Width="20"
                        Height="20"
                        Background="Pink"
                        BorderThickness="0"
                        Content="□"
                        FontWeight="Bold"
                        Foreground="Gray" />
                    <Button
                        Width="20"
                        Height="20"
                        Background="Pink"
                        BorderThickness="0"
                        Content="X"
                        FontWeight="Bold"
                        Foreground="Gray" />
                </StackPanel>
            </Grid>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    ShadowDepth="1"
                    Color="#FFD0D0D0" />
            </Border.Effect>
        </Border>

    </Grid>
</Window>
