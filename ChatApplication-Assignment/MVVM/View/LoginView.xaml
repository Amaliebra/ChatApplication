<Window
    x:Class="ChatClient.MVVM.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatClient.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginView"
    Width="600"
    Height="400"
    AllowsTransparency="True"
    Background="#FFEAEAEA"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.ColumnSpan="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="White"
                MouseDown="Border_MouseDown">
                <Grid HorizontalAlignment="Stretch">
                    <Image
                        Width="20"
                        Height="20"
                        Margin="5,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        RenderTransformOrigin="-2.087,0.958"
                        Source="\Resources\logo.png">
                        <Image.OpacityMask>
                            <ImageBrush
                                ImageSource="\Resources\logo.png"
                                Stretch="Fill"
                                TileMode="None" />
                        </Image.OpacityMask>
                    </Image>
                    <Label
                        Margin="20,0,0,0"
                        Content="LilyChat"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#FF2F2E2E" />

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="20"
                            Height="20"
                            Margin="0,0,0,3"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"
                            Content="🗕"
                            Foreground="#FF2F2E2E" />
                        <Button
                            Width="20"
                            Height="20"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MaximizeButton_Click"
                            Content="◻"
                            FontWeight="ExtraBold"
                            Foreground="#FF2F2E2E" />
                        <Button
                            Width="20"
                            Height="20"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ExitButton_Click"
                            Content="X"
                            FontWeight="SemiBold"
                            Foreground="#FF2F2E2E" />
                    </StackPanel>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Direction="320"
                        ShadowDepth="1"
                        Color="#FFD0D0D0" />
                </Border.Effect>
            </Border>
        </Grid>
        <Border>
            <StackPanel
                Grid.Row="1"
                Width="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Label
                    FontSize="9"
                    FontWeight="Heavy"
                    Foreground="#FF2F2E2E">
                    Username:
                </Label>
                <TextBox
                    x:Name="txtUsername"
                    Height="23"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Foreground="#FF2F2E2E"
                    Text="{Binding Username, Mode=TwoWay}" />
                <Label
                    FontSize="9"
                    FontWeight="Heavy"
                    Foreground="#FF2F2E2E">
                    Password:
                </Label>
                <PasswordBox
                    x:Name="txtPassword"
                    Height="23"
                    BorderBrush="Transparent"
                    Foreground="#FF2F2E2E" />
                <Label
                    Content="Reset password"
                    FontSize="9"
                    Foreground="#FF2F2E2E" />
                <Button
                    x:Name="BtnLogin"
                    Height="23"
                    Margin="0,15,0,0"
                    Background="#56C54C"
                    BorderBrush="Transparent"
                    Command="{Binding LoginCommand}"
                    Content="Log In"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="#FF2F2E2E" />
                <TextBlock
                    x:Name="lblErrorMessage"
                    Margin="0,5,0,0"
                    Foreground="Red"
                    Visibility="Collapsed" />
                <Label
                    Content="Need an account?"
                    FontSize="9"
                    Foreground="#FF2F2E2E" />
            </StackPanel>
        </Border>
    </Grid>
</Window>